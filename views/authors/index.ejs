<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="Name">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author=> { %>
    <div>
        <%= author.name %>
    </div>
    <div class="btn-row">
        <a href="/authors/<%= author.id %>" class="btn btn-primary">View</a>
        <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
        <%- include('../partials/deleteForm' , {url: `/authors/${author.id}?_method=DELETE`}) %>
            <% }) %>
    </div>